<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4DD0E1"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#4DD0E1"
        android:fontFamily="@font/abril_fatface"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:text="Beautiful BANGLADESH"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:insetLeft="2dp"
            android:insetRight="2dp"
            android:onClick="team1"
            android:text="National\nMemorial"
            android:textSize="12sp"
            app:iconPadding="6dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:insetLeft="2dp"
            android:insetRight="2dp"
            android:onClick="team2"
            android:text="ShatGambuj\nMosque"
            android:textSize="12sp"
            app:iconPadding="6dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="3dp"
            android:insetLeft="2dp"
            android:insetRight="2dp"
            android:onClick="team3"
            android:text="Sajek\nValley"
            android:textSize="12sp"
            app:iconPadding="6dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:insetLeft="2dp"
            android:insetRight="2dp"
            android:onClick="team5"
            android:text="Panam\nCity"
            android:textSize="12sp"
            app:iconPadding="6dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="3dp"
            android:insetLeft="2dp"
            android:insetRight="2dp"
            android:onClick="team6"
            android:text="Sundanaban\nForest"
            android:textSize="12sp"
            app:iconPadding="6dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:insetLeft="2dp"
            android:insetRight="2dp"
            android:onClick="team7"
            android:text="LalBagh\nFort"
            android:textSize="12sp"
            app:iconPadding="6dp" />


    </LinearLayout>


    <FrameLayout
        android:id="@+id/team"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6C088" />

</LinearLayout>